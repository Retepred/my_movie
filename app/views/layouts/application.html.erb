<!DOCTYPE html>
<html>
<head>
  <title>MyMovie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class='menu'>
  <nav>
    <ul>
      <li> <%= link_to('Home |', root_path) %> </li>      
      <li> <%= link_to('Movie List', movies_path) %> </li>
      <li> 

          <%= form_for :search_by_category, :url => {:controller => 'movies', :action => 'index'}, :html => {:method => 'get'} do |f| %>
          <%= text_field_tag :query %>
          <%= f.label :category_id, "Category" %>
          <%= f.collection_select :category_id, Category.all,
                                  :id, :name,
                                  {:prompt => 'All'} %>
          <br/>
          <%= f.submit "Search" %>
      <% end %>


      </li>
    </ul>
  </nav>
</div>


<%= yield %>

<!-- Checkout dis sound if you want fun. Popup is annoying though. -->
<audio controls>
  <source src="moviesounds.mp3" typw="mp3"
</audio>

</body>
</html>
